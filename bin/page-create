#!/usr/bin/env node

const chalk = require('chalk')

console.log()
console.log(
  `  ` +
  chalk.yellow(`page create`) +
  ' is a Page CLI 1 only command and you are using Page CLI ' +
  require('../package.json').version + '.'
)
console.log(`  You may want to run the following to upgrade to Page CLI 1:`)
console.log()
console.log(chalk.cyan(`  npm uninstall -g Page-cli`))
console.log(chalk.cyan(`  npm install -g @Page/cli`))
console.log()
